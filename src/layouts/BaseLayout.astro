---
// src/layouts/BaseLayout.astro
export interface Props {
	lang?: string;
	title?: string;
	description?: string;
}
const { 
	lang = 'ru', 
	title = 'Alash-Zan - Юридическая фирма премиум-класса', 
	description = 'Alash-Zan - ведущая юридическая фирма в Казахстане, специализирующаяся на корпоративном праве, судебных спорах и комплаенсе.' 
} = Astro.props;
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { generateHreflangs } from '../i18n/index';

// Define localized site names
const localizedSiteNames = {
  ru: 'Alash-Zan - Юридическая фирма премиум-класса',
  en: 'Alash-Zan - Premium Legal Firm',
  kz: 'Alash-Zan - Сын кластағы заңдық компания'
};

const siteName = localizedSiteNames[lang] || localizedSiteNames.ru;
